<br><br>
<h1><%= @mountain.name %><br></h1>
Rating: <%= @mountain.hikes.average(:rating) %> /5<br>
City: <%= @mountain.city %><br>
State: <%= @mountain.state %> <br>
Summit Elevation: <%= @mountain.summit_elevation %><br>
Base Elevation: <%= @mountain.base_elevation %> <br>
Distance: <%= @mountain.hike_distance %><br>
Directions: <%= link_to "Click", @mountain.directions_url, target: "_blank" %><br><br>

<%= link_to "I hiked #{@mountain.name}", new_mountain_hike_path(@mountain) %><br>

<% if current_user.admin %>
    <%= link_to "Edit Mountain", edit_mountain_path(@mountain) %><br>
    <%= form_tag(mountain_path(@mountain.id), method: :delete) do %>
        <%= submit_tag "Delete Mountain"%>
    <% end %><br>
<% end %>

<h2>Reviews:</h2>
<p>
    <% if @mountain.hikes %>
        <% @mountain.hikes.each do |h| %>
            <h4><%= h.date_hiked.to_s + " Username: " + h.user.username + ", Rating: " + h.rating.to_s + "/5" %></h4>
            <%= h.comment %><br><br>
        <% end %>
    <% else %>
        No reviews for this mountain hike
    <% end %>
</p>

