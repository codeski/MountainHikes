    <%= f.text_field :name %><br>
    <%= f.label :city %><br>
    <%= f.text_field :city %><br>
    <%= f.label :state %><br>
    <%= f.text_field :state %><br>
    <%= f.label :base_elevation %><br>
    <%= f.number_field :base_elevation %><br>
    <%= f.label :summit_elevation %><br>
    <%= f.number_field :summit_elevation %><br>
