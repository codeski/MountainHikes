<%= form_for([@mountain, @hike]) do |f| %>
    
    <%= f.hidden_field :mountain_id %>
    
    <%= f.label :rating %><br>
    <%= f.number_field :rating %><br>
    <%= f.label :comment %><br>
    <%= f.text_field :comment %><br>
    <%= f.label :date_hiked %><br>
    <%= f.date_field :date_hiked %><br>
    <%= f.label :percent_hiked %><br>
    <%= f.number_field :percent_hiked %>
    <%= f.submit %>
<% end %>